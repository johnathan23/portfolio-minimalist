---
import Section from "../Section.astro";
import { education } from "@cv";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, paused, studyType }) => {
        let years = "";

        const formatYear = (date: string | number | Date) => new Date(date).getFullYear();

        if (startDate && endDate) {
          years = `${formatYear(startDate)} - ${formatYear(endDate)}`;
        } else if (endDate && !startDate) {
          years = `${formatYear(endDate)}`;
        } else if (startDate && !endDate) {
          years = `${formatYear(startDate)} - Actual`;
        }

        if (paused) {
          years += " (pausado)";
        }

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>
                {years && <time>{years}</time>}
              </header>
              <footer>
                <p>{studyType} en {area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
