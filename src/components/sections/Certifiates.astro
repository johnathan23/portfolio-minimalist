---
import Section from "../Section.astro";
import { certificates } from "@cv";
---

<Section title="Certificaciones">
  <ul>
    {
      certificates.map(({ name, date, validThrough, issuer, url }) => {
        const startYear = date ? new Date(date).getFullYear() : "Â¿?";
        const endYear = validThrough
          ? new Date(validThrough).getFullYear()
          : "Actual";
        const displayDate = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header class="cert-header">
                <div class="cert-info">
                  <h3>
                    {url ? (
                      <a href={url} target="_blank" rel="noopener noreferrer">
                        {name}
                      </a>
                    ) : (
                      name
                    )}
                  </h3>
                  <p>{issuer}</p>
                </div>
                <small class="cert-date">{displayDate}</small>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-left: 0;
    list-style: none;
  }

  article {
    border: 1px solid #f0f0f0;
    border-radius: 8px;
    padding: 1rem;
    background: #fff;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
  }

  .cert-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .cert-info h3 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .cert-info h3 a {
    color: #111;
    text-decoration: none;
  }

  .cert-info h3 a:hover {
    text-decoration: underline;
  }

  .cert-info p {
    margin: 0;
    font-size: 0.85rem;
    color: #666;
  }

  .cert-date {
    font-size: 0.75rem;
    color: #999;
    white-space: nowrap;
  }

  @media (width <= 700px) {
    .cert-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .cert-date {
      align-self: flex-end;
    }
  }
</style>
