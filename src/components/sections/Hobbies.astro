---
import Section from "../Section.astro"
import { hobbies } from "@cv"
---

<Section title="Hobbies">
  <ul>
    {hobbies.map(hobby => (
      <li>{hobby}</li>
    ))}
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
